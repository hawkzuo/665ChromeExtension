{
    "manifest_version": 2,
    "name": "Youtube Spam Detection Extension",
    "short_name": "youtubeSpam",
    "version": "1.0",
    "author": "zjy119@tamu.edu",

    "description": "Extension for Spam on Youtube",

    "content_scripts": [
        {
            "matches": [ "*://www.youtube.com/*" ],
            "js": [
                "src/spamfy.js","src/jquery-3.3.1.js"
            ],
            "css": ["css/main.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
                    "src/jquery-3.3.1.js"
                    ],
        "persistent": false
    },
    "options_ui": {
        // Required.
        "page": "src/options.html",
        // Recommended.
        "chrome_style": true
    },

    "permissions": [
        "storage"
    ]
}
